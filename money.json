
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "money",
    "description": "A product from Acme's catalog",
    "type": "object",
    "properties": {
        "currency": {
            "type": "string",
            "description": "Tipo de moneda"
        },
        "amount": {
            "type": "number",
            "description": "Cantidad",
            "format": "double"
        },
        "decimals": {
            "type": "integer",
            "description": "Numero de decimales a tomar en cuenta",
            "format": "int32"
        }
    },
    "additionalProperties": false,
    "required": [
        "currency",
        "decimals",
        "amount"
    ]
}
